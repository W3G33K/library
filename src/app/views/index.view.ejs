<%- include partials/common-header.partial.ejs -%>
<main>
	<section class="jumbotron">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<form action="/users/user/login" method="POST">
						<fieldset>
							<legend>Login To Your Account</legend>
							<div class="form-group">
								<label for="username">Username</label>
								<input type="text" id="username" name="username" class="form-control"/>
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input type="password" id="password" name="password" class="form-control"/>
							</div>
							<div class="form-group mb-0 text-right">
								<button type="submit" class="btn btn-primary">Login</button>
							</div>
						</fieldset>
					</form>
				</div>
				<div class="col-lg-6">
					<form action="/users/user/register" method="POST">
						<fieldset>
							<legend>Register Your Account</legend>
							<div class="form-group">
								<label for="username">Username</label>
								<input type="text" id="username" name="username" class="form-control"/>
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input type="password" id="password" name="password" class="form-control"/>
							</div>
							<div class="form-group mb-0 text-right">
								<button type="submit" class="btn btn-primary">Register</button>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section class="album py-5 bg-light">
		<div class="container">
			<div class="row">
				<header class="col-lg-12 border-bottom mb-4">
					<h2>Recently Added Books</h2>
				</header>
			</div>
			<div class="row">
				<% for(let book of books) { %>
					<div class="col-lg-4 mb-4">
						<div class="card h-100 shadow-sm">
							<svg class="bd-placeholder-img card-img-top" width="100%" height="500" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false">
								<title><%= book.title %></title>
								<rect fill="#343a40" width="100%" height="100%"/>
								<text fill="#eceeef" dy="0.3em" x="50%" y="50%"><%= book.title %></text>
							</svg>
							<div class="card-body">
								<h3>
									<a href="/books/book/<%= book._id %>"><%= book.title %></a>
								</h3>
								<p class="card-text"><%= book.description %></p>
							</div>
						</div>
					</div>
				<% } %>
			</div>
		</div>
	</section>
</main>
<%- include partials/common-footer.partial.ejs -%>
