<%- include partials/common-header.partial.ejs -%>
<main>
	<section class="jumbotron text-center">
		<div class="container">
			<h1 class="jumbotron-heading"><%= TagUtils.title(null, true) %></h1>
			<%- TagUtils.description() %>

			<p>
				<a href="#" class="btn btn-primary my-2">Manage My Library</a>
				<a href="#" class="btn btn-secondary my-2">Manage My Account</a>
			</p>
		</div>
	</section>

	<section class="album py-5 bg-light">
		<div class="container">
			<div class="row">
				<header class="col-lg-12 border-bottom mb-4">
					<h2>Recently Added Books</h2>
				</header>
			</div>
			<div class="row">
				<% for(let book of books) { %>
					<div class="col-lg-4 mb-4">
						<div class="card h-100 shadow-sm">
							<svg class="bd-placeholder-img card-img-top" width="100%" height="500" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false">
								<title><%= book.title %></title>
								<rect fill="#343a40" width="100%" height="100%"/>
								<text fill="#eceeef" dy="0.3em" x="50%" y="50%"><%= book.title %></text>
							</svg>
							<div class="card-body">
								<h3>
									<a href="/books/book/<%= book._id %>"><%= book.title %></a>
								</h3>
								<p class="card-text"><%= book.description %></p>
							</div>
						</div>
					</div>
				<% } %>
			</div>
		</div>
	</section>
</main>
<%- include partials/common-footer.partial.ejs -%>
