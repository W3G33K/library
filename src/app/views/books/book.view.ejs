<%- include partials/common-header.partial.ejs -%>
<main>
	<section class="py-5 bg-light">
		<div class="container">
			<div class="row">
				<header class="col-lg-12 border-bottom mb-4">
					<h2><%= book.title %></h2>
				</header>
			</div>
			<div class="row">
				<div class="col-lg-4">
					<svg class="bd-placeholder-img rounded" width="100%" height="500" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false">
						<title><%= book.title %></title>
						<rect fill="#343a40" width="100%" height="100%"/>
						<text fill="#eceeef" dy="0.3em" x="50%" y="50%"><%= book.title %></text>
					</svg>
				</div>

				<div class="col-lg-8">
					<dl>
						<dt>UUID</dt>
						<dd><%= book._id %></dd>

						<dt>Title</dt>
						<dd><%= book.title %></dd>

						<dt>Authors</dt>
						<dd>Lorem Ipsum, Dolor S. Amet, Consectetur A. Elit</dd>

						<dt>ISBN-10</dt>
						<dd>0-5182-6960-4</dd>

						<dt>ISBN-13</dt>
						<dd>978-2-4596-2932-2</dd>

						<dt>Series</dt>
						<dd>My Book Series</dd>

						<dt>Print Length</dt>
						<dd>It's Over 9000 Pages!</dd>

						<dt>Publisher</dt>
						<dd>Some Book Publisher, LLC.</dd>

						<dt>Publication Date</dt>
						<dd>January 1, 1970</dd>

						<dt>Language</dt>
						<dd>English</dd>

						<dt>Summary</dt>
						<dd><%= book.description %></dd>
					</dl>
				</div>
			</div>
		</div>
	</section>
</main>
<%- include partials/common-footer.partial.ejs -%>
